<h1>toppage</h1>
<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Title</th>
      <th>Body</th>
      <th>Star</th>
      <th>投稿者</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.author %></td>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.star %></td>
        <td><%= link_to post.user.name, post.user %></td>
        <td><%= link_to 'Show', post %></td>
        <% if user_signed_in? && current_user != post.user %>
          <% if current_user.favorite_find(post.id) %>
            <td><%= link_to 'お気に入りからはずす', destroy_favorite_path(post.id), method: :delete %></td>
          <% else %>
            <td><%= link_to 'お気に入り登録する', create_favorite_path(post.id), method: :post %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
