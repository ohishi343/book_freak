<div class="container">
<div class="row">
<div class="col-lg-8">
<% if user_signed_in? && @user == current_user %>
  <h1><%= @user.name %></h1>
  <%= link_to "プロフィール編集", edit_user_registration_path, class: "btn btn-outline-success mt-3" %>
<% else %>
  <h1><%= @user.name %></h1>
<% end %>

<table class="table">
  <tr>
    <th>プロフィール画像</th>
    <td><% if @user.avatar.attached? %><%= image_tag @user.avatar, size: "100x100" %><% end %></td>
  </tr>
  <tr>
    <th>名前</th>
    <td><%= @user.name %></td>
  </tr>
  <tr>
    <th>自己紹介</th>
    <td><% if @user.profile.present? %><%= @user.profile %><% end %></td>
  </tr>
</table>

<div class="accordion-container">
  <div class="accordion-title js-accordion-title">
    <h4 class="my-3">投稿した書評</h4>
  </div>
  <div class="accordion-content">
    <%= render "shared/table", posts: @posts %>
  </div>
</div>

<div class="accordion-container">
  <div class="accordion-title js-accordion-title">
    <h4 class="my-3">お気に入り</h4>
  </div>
  <div class="accordion-content">
    <%= render "shared/table", posts: @favorites %>
  </div>
</div>

<%= link_to "戻る", root_path, class: "btn btn-outline-primary mt-3" %>
</div>
</div>
</div>
