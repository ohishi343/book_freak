<p id="notice"><%= notice %></p>

<div class="container mt-5">
  <div class="row">
    <div class="col-lg-4">
      <% if @post.image.present? %>
        <%= image_tag @post.image, class: "card-img-top img-responsive img-rounded", width: "100%", height: "300" %>
      <% else %>
        <%= image_tag "book.jpg", class: "card-img-top img-responsive img-rounded", width: "100%", height: "300" %>
      <% end %>
      <% if @post.user == current_user %>
        <%= link_to '編集', edit_post_path(@post), class: "btn btn-outline-success mt-3" %>
        <%= link_to '削除', @post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-success mt-3" %>
      <% end %>
      <%= link_to '戻る', posts_path, class: "btn btn-outline-success mt-3" %>
    </div>
    <div class="col-lg-8">
      <p>
        <strong>投稿者</strong>
        <%= @post.user.name %>
      </p>

      <p>
        <strong>著者</strong>
        <%= @post.author %>
      </p>

      <p>
        <strong>タイトル</strong>
        <%= @post.title %>
      </p>

      <p>
        <strong>書評</strong>
        <%= @post.body %>
      </p>

        <strong>評価</strong>
        <div id="star-rate<%= @post.id %>"></div>
        <script>
          $('#star-rate<%= @post.id %>').raty({
            size: 36,
            starOff: '<%= asset_path('star-off.png') %>',
            starOn: '<%= asset_path('star-on.png') %>',
            half: false,
            readOnly: true,
            score: <%= @post.star %>,
          });
        </script>

    </div>
  </div>
</div>
