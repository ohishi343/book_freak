<% if post.favorited_by?(current_user) %>
  <%= link_to "", post_favorites_path(post.id), method: :delete, remote: true, class: "fas fa-heart fa-2x", style: "text-decoration:none" %>
<% else %>
  <%= link_to "", post_favorites_path(post.id), method: :post, remote: true, class: "far fa-heart fa-2x", style: "text-decoration:none" %>
<% end %>
